<div class="container">
<br><br><br><br><br>
<div class="md-form">
<div class="row">
<div class ="col-md-2"></div>
<div class="col-md-8">
<h2 id="h1">تعديل الحساب </h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, label:'البريد الالكتروني', required: true, autofocus: true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>حاليا في انتظار تأكيد: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password, label:'كلمة المرور', autocomplete: "off", hint: "اتركه فارغًا إذا كنت لا تريد تغييره", required: false %>
    <%= f.input :password_confirmation, label:'تأكيد كلمة المرور', required: false %>
    <%= f.input :current_password, label:'كلمة المرور الحالية', hint: "نحن بحاجة إلى كلمة المرور الحالية لتأكيد تغييراتك", required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "تحديث" %>
  </div>
<% end %>

<h3>إلغاء حسابي</h3>

<p>Unhappy? <%= link_to "إلغاء حسابي", registration_path(resource_name), data: { confirm: "هل انت متأكد؟" }, method: :delete %></p>

<%= link_to "الرجوع", :back %>
</div></div></div></div></div>
<br><br>
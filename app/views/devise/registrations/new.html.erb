<div class="md-form">
<div class="row">
<div class ="col-md-2"></div>
<div class="col-md-8">
<h2 id="h1"> سجل الان</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, label:'البريد الالكتروني', required: true, autofocus: true %>
    <%= f.input :password, label:'كلمة السر', required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    <%= f.input :password_confirmation, label:'اعادة كلمة السر', required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "سجل الان" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
